{
	"name": "@shima/docs",
	"version": "0.3.0",
	"description": "Shima documentation",
	"homepage": "https://shima-grid.com/",
	"license": "MIT",
	"author": "s4tori",
	"scripts": {
		"dev": "npm run start:dev",
		"prod": "npm run build:prod && npm run start:prod",
		"build:dev": "webpack --config config/webpack/webpack.config.dev.js --progress",
		"build:prod": "webpack --config config/webpack/webpack.config.prod.js",
		"build:stat": "webpack --config config/webpack/webpack.config.stat.js",
		"start:dev": "cross-env NODE_CONFIG_ENV=development webpack-dev-server --config config/webpack/webpack.config.dev.js --color",
		"start:prod": "cross-env NODE_ENV=production serve -l 1337 dist",
		"lint": "eslint --ext .vue,.js config src || exit 0"
	},
	"dependencies": {
		"cross-env": "^7.0.3"
	},
	"devDependencies": {
		"@babel/core": "^7.18.2",
		"@babel/preset-env": "^7.18.2",
		"@ckpack/vue-color": "^1.1.9",
		"@csstools/normalize.css": "^12.0.0",
		"@vue/compiler-sfc": "^3.2.37",
		"babel-loader": "^8.2.5",
		"clean-webpack-plugin": "^4.0.0",
		"clipboard": "^2.0.11",
		"copy-webpack-plugin": "^11.0.0",
		"css-loader": "^6.7.1",
		"css-minimizer-webpack-plugin": "^4.0.0",
		"eslint": "^8.17.0",
		"eslint-plugin-vue": "^9.1.1",
		"html-webpack-plugin": "^5.5.0",
		"lodash": "^4.17.21",
		"mini-css-extract-plugin": "^2.6.0",
		"postcss": "^8.4.14",
		"postcss-loader": "^7.0.0",
		"postcss-preset-env": "^7.7.1",
		"serve": "^13.0.2",
		"std-env": "^3.1.1",
		"style-loader": "^3.3.1",
		"stylelint": "^14.9.1",
		"stylelint-config-recess-order": "^3.0.0",
		"stylelint-plugin-stylus": "^0.13.1",
		"stylus": "^0.58.1",
		"stylus-loader": "^7.0.0",
		"terser-webpack-plugin": "^5.3.3",
		"vue": "^3.2.37",
		"vue-loader": "^17.0.0",
		"vue-style-loader": "^4.1.3",
		"webpack": "^5.73.0",
