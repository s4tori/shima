///////////////////////////////////////////////////////////////////////////////
/// Normalize & Reset

@import "~normalize.css/normalize.css"
@import "./settings"
@import "./functions"
@import "./mixins"

*, *:before, *:after
	box-sizing inherit
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

html
	box-sizing border-box
	scroll-behavior smooth // Smooth Scroll (Firefox / Chrome)

body,
h1, h2, h3, h4, h5, h6,
p, blockquote, pre,
dl, dd, ol, ul,
form, fieldset, legend,
figure,
table, th, td, caption,
hr
	margin  0
	padding 0


///////////////////////////////////////////////////////////////////////////////
/// Layout

html
	font-size $base-font-size
	font-size ($base-font-size / 16px) em
	line-height $base-line-height
	line-height ($base-line-height / $base-font-size) em
	background-color $base-bg

body, input
	font-family /*system-ui,*/ -apple-system, BlinkMacSystemFont,
                "Segoe UI", Roboto, Oxygen,
                Ubuntu, Cantarell, "Open Sans",
                "Helvetica Neue", sans-serif

::selection
	background-color: $base-color["default"]
	color #EEE
	text-shadow 0 3px 1px #000

.main
	h1
		shima-font-size(2)
		padding-bottom shima-vr(2)
		font-weight 200

	h2
		position relative
		margin-bottom shima-vr()
		shima-font-size(0)
		font-weight 300
		background-color $base-bg
		white-space nowrap
		overflow hidden
		color: $base-color["blue"]

		&::after
			content ""
			display inline-block
			width 100%
			height 1px
			vertical-align middle
			margin-left $base-spacing--sm
			background-color: $base-color["blue"]
			// background: linear-gradient(to right, $base-color["blue"], alpha($base-color["blue"],.2) 80%,transparent 100%);

	h3
		position relative
		margin-bottom shima-vr()
		shima-font-size(0)
		font-weight 300

		+shima-mq("sm")
			shima-font-size(-1)

	h2, h3
		a
			reset-link()

			.icon
				transition opacity .3s ease-in-out
				opacity 0

			&:hover
				.icon
					opacity 1

div, p, input
	shima-font-size(-1)
	font-weight 300
	font-weight normal


