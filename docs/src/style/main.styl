///////////////////////////////////////////////////////////////////////////////
/// Normalize & Reset

@import "~@csstools/normalize.css"
@import "./settings"
@import "./functions"
@import "./mixins"

*, *:before, *:after
	box-sizing inherit
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

html
	box-sizing border-box
	scroll-behavior smooth // Smooth Scroll (Firefox / Chrome)

body,
h1, h2, h3, h4, h5, h6,
p, blockquote, pre,
dl, dd, ol, ul,
form, fieldset, legend,
figure,
table, th, td, caption,
hr
	padding 0
	margin  0


///////////////////////////////////////////////////////////////////////////////
/// Layout

html
	font-size $base-font-size
	font-size ($base-font-size / 16px) em
	line-height $base-line-height
	line-height ($base-line-height / $base-font-size) em
	background-color $base-bg

body, input
	font-family /*system-ui,*/ -apple-system, BlinkMacSystemFont,
		"Segoe UI", Roboto, Oxygen,
		Ubuntu, Cantarell, "Open Sans",
		"Helvetica Neue", sans-serif

::selection
	color #EEE
	text-shadow 0 3px 1px #000
	background-color: $base-color["default"]

.main
	h1
		shima-font-size(2)
		padding-bottom shima-vr(2)
		font-weight 200

	h2
		position relative
		margin-bottom shima-vr()
		overflow hidden
		shima-font-size(0)
		font-weight 300
		color: $base-color["blue"]
		white-space nowrap
		background-color $base-bg

		&::after
			display inline-block
			width 100%
			height 1px
			margin-left $base-spacing--sm
			vertical-align middle
			content ""
			// background: linear-gradient(to left, $base-color["blue"], alpha($base-color["blue"],0.2) 80%, transparent 100%)
			background-color: $base-color["blue"]

	h3
		position relative
		margin-bottom shima-vr()
		shima-font-size(0)
		font-weight 300

		+shima-mq("sm")
			shima-font-size(-1)

	h2, h3
		a
			reset-link()

			.icon
				opacity 0
				transition opacity 0.3s ease-in-out

			&:hover
				.icon
					opacity 1

div, p, input
	shima-font-size(-1)
	font-weight normal


