/// Mixins

// Usage:
// +shima-mq("md")
//    width: 500px
shima-mq($bp)
	for $key, $val in $base-bp
		// p($key)
		if $bp is $key
			@media $val
				{block}

// Usage:
// shima-absolute: top left
// shima-absolute: top 5px left
// shima-absolute: top left 5px
// shima-absolute: top 5px left 5px
shima-absolute()
	i = 0
	position absolute
	for j in (1..4)
		if length(arguments) > i
			{arguments[i]}: arguments[i + 1] is a "unit" ? arguments[i += 1] : 0
		i += 1

reset-list()
	padding 0
	margin 0
	list-style-type none

	li
		padding 0
		margin 0

reset-link()
	color inherit
	text-decoration none
	outline none


